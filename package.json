{
  "name": "ft_transcendence",
  "private": true,
 "scripts": {
    "dev": "turbo run dev --filter=!api --filter=!infra",
    "dev:local": "docker compose down && turbo run dev",
    "dev:api": "pnpm --filter api run dev",
    "dev:game": "pnpm --filter game run dev",

    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "up": "docker compose up -d",
    "down": "docker compose down",
    "logs": "docker compose logs -f api",
    "rebuild": "docker compose down -v --rmi local --remove-orphans && docker compose build --no-cache && docker compose up -d"
  },
  "devDependencies": {
    "@typescript-eslint/parser": "8.37.0",
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "5.8.3",
    "tsx": "^4.7.1"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
